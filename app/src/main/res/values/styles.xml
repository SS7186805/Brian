<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/yellow</item>
    </style>

    <!-- Base application theme. -->
    <!--    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">-->
    <style name="AppParentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/yellow</item>
        <item name="android:windowLightStatusBar">false</item>
        <!--        <item name="android:statusBarColor">@color/status_bar_color</item>-->
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowNoTitle">true</item>
        <item name="android:spotShadowAlpha">.1</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="colorPrimaryDark">@color/blackTheme</item>


        <!--<item name="colorError">@color/error_color</item>
        <item name="android:windowBackground">@drawable/bg</item>-->
    </style>
    <style name="customTabStyle" parent="Widget.MaterialComponents.TabLayout">

    </style>
    <style name="TabLayoutText">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/century_gothic</item>
        <item name="android:textSize">@dimen/px50</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/century_gothic</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#6b6b6b</item>
        <item name="android:textSize">15sp</item>
    </style>



</resources>
