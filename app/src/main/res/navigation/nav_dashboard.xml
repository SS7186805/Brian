<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_dashboard"
    app:startDestination="@id/mainScreenFragment">

    <fragment
        android:id="@+id/mainScreenFragment"
        android:name="com.brian.views.fragments.MainScreenFragment"
        android:label="fragment_main_screen"
        tools:layout="@layout/fragment_main_screen">
        <action
            android:id="@+id/action_homeFragment_to_challengeFragment"
            app:destination="@id/challenegesFragment"
            app:popUpTo="@+id/challenegesFragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_mainScreenFragment_to_videoViewFragment"
            app:destination="@id/videoViewFragment"
            app:enterAnim="@anim/enter_transition"
            app:exitAnim="@anim/exit_transitioin"
            app:popEnterAnim="@anim/enter_pop_transition"
            app:popExitAnim="@anim/exit_pop_transition" />

    </fragment>

    <fragment
        android:id="@+id/videoViewFragment"
        android:name="com.brian.views.fragments.VideoViewFragment"
        tools:layout="@layout/fragment_video_view">

        <action
            android:id="@+id/action_videoViewFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:enterAnim="@anim/enter_transition"
            app:exitAnim="@anim/exit_transitioin"
            app:popEnterAnim="@anim/enter_pop_transition"
            app:popExitAnim="@anim/exit_pop_transition" />

        <action
            android:id="@+id/action_videoViewFragment_to_trainingFragment"
            app:destination="@id/trainingVideosFragment"
            app:enterAnim="@anim/enter_transition"
            app:exitAnim="@anim/exit_transitioin"
            app:popEnterAnim="@anim/enter_pop_transition"
            app:popExitAnim="@anim/exit_pop_transition" />
    </fragment>


    <fragment
        android:id="@+id/homeFragment"
        android:name="com.brian.views.fragments.HomeFragment"
        tools:layout="@layout/fragment_home" />


    <fragment
        android:id="@+id/trainingVideosFragment"
        android:name="com.brian.views.fragments.TrainingVideosFragment"
        tools:layout="@layout/training_videos" />

    <fragment
        android:id="@+id/pitcherFragment"
        android:name="com.brian.views.fragments.PitcherFragment"
        tools:layout="@layout/pitcher_fragment" />
    <fragment
        android:id="@+id/questionsFragment"
        android:name="com.brian.views.fragments.QuestionsFragment"
        tools:layout="@layout/questions_fragment" />

    <fragment
        android:id="@+id/gameSummaryFragment"
        android:name="com.brian.views.fragments.GameSummaryFragment"
        tools:layout="@layout/game_summary_fragment" />
    <fragment
        android:id="@+id/buzzFeedFragment"
        android:name="com.brian.views.fragments.BuzzFeedFragment"
        tools:layout="@layout/buzz_feed" />
    <fragment
        android:id="@+id/buzzFeedDetailsFragment"
        android:name="com.brian.views.fragments.BuzzFeedDetailsFragment"
        tools:layout="@layout/buzz_feed_details_fragment" />

    <fragment
        android:id="@+id/myFriendsFragment"
        android:name="com.brian.views.fragments.MyFriendsFragment"
        tools:layout="@layout/my_friends_fragment" />

    <fragment
        android:id="@+id/usersFragment"
        android:name="com.brian.views.fragments.UsersFragment"
        tools:layout="@layout/users_fragment" />
    <fragment
        android:id="@+id/messagesFragment"
        android:name="com.brian.views.fragments.MessagesFragment"
        tools:layout="@layout/messages_fragment" />

    <fragment
        android:id="@+id/challenegesFragment"
        android:name="com.brian.views.fragments.ChallengesFragment"
        tools:layout="@layout/challenges_fragment" />

    <fragment
        android:id="@+id/challenegeFragment"
        android:name="com.brian.views.fragments.ChallengeFragment"
        tools:layout="@layout/challenge_fragment" />

    <fragment
        android:id="@+id/createChallengeFragment"
        android:name="com.brian.views.fragments.CreateChallengeFragment"
        tools:layout="@layout/create_challenge_fragment" />
    <fragment
        android:id="@+id/userProfileFragment"
        android:name="com.brian.views.fragments.UserProfileFragment"
        tools:layout="@layout/user_profile_fragment" />
    <fragment
        android:id="@+id/challengeType"
        android:name="com.brian.views.fragments.ChallengeTypeFragment"
        tools:layout="@layout/challenge_type_fragment" />
    <fragment
        android:id="@+id/teamFragment"
        android:name="com.brian.views.fragments.TeamsFragment"
        tools:layout="@layout/teams_fragment" />

    <fragment
        android:id="@+id/createTeamFragment"
        android:name="com.brian.views.fragments.CreateTeamFragment"
        tools:layout="@layout/create_team_fragment" />

    <fragment
        android:id="@+id/myTeamfragment"
        android:name="com.brian.views.fragments.MyTeamPlayersFragment"
        tools:layout="@layout/my_teams_players_fragment" />
    <fragment
        android:id="@+id/myStatsFragment"
        android:name="com.brian.views.fragments.MyStatsFragment"
        tools:layout="@layout/my_stats_fragment" />
    <fragment
        android:id="@+id/leaderBoards"
