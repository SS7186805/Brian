<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.brian.viewModels.register.RegisterViewModel"/>

        <variable
            name="clickHandler"
            type="com.brian.views.fragments.ForgotPasswordFragment.ClickHandler" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blackTheme">

        <ScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#121213">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/forgot_guideline_begin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="10dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/forgot_guideline_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="10dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/Guideline_half"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.5"/>


            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_back"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="@id/forgot_guideline_begin" />


            <TextView
                android:id="@+id/tv_forgot_pswd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot Password"
                android:fontFamily="@font/century_gothic"
                android:textColor="#fec60a"
                android:textSize="60px"
                app:layout_constraintStart_toEndOf="@+id/btn_back"
                app:layout_constraintTop_toTopOf="@+id/btn_back"
                app:layout_constraintEnd_toEndOf="@id/forgot_guideline_end"
                app:layout_constraintBottom_toBottomOf="@+id/btn_back"/>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/image"
                app:layout_constraintBottom_toTopOf="@+id/Guideline_half"
                app:layout_constraintTop_toBottomOf="@+id/tv_forgot_pswd"
                app:layout_constraintStart_toStartOf="@id/forgot_guideline_begin"
                app:layout_constraintEnd_toEndOf="@id/forgot_guideline_end"/>

            <TextView
                android:id="@+id/tv_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:textStyle="bold"
                android:fontFamily="@font/century_gothic"
                android:text="Please enter your registered email address.\n    A reset password link will be sent to you."
                android:textColor="#aaaaaa"
                app:layout_constraintStart_toStartOf="@+id/forgot_guideline_begin"
                app:layout_constraintEnd_toEndOf="@+id/forgot_guideline_end"
                app:layout_constraintTop_toBottomOf="@+id/imageView"/>

            <EditText
                android:id="@+id/et_email_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="20dp"
                android:singleLine="true"
                android:fontFamily="@font/century_gothic"
                android:background="@drawable/capsuler_btn"
                android:drawableLeft="@drawable/ic_mail"
                android:drawablePadding="10dp"
                android:hint="Email Address"
                android:padding="18dp"
                android:textColor="#7e7e7e"
                android:textColorHint="#7e7e7e"
                app:layout_constraintStart_toStartOf="@+id/forgot_guideline_begin"
                app:layout_constraintEnd_toEndOf="@id/forgot_guideline_end"
                app:layout_constraintTop_toBottomOf="@id/tv_msg"/>

            <Button
                android:id="@+id/btn_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:background="@drawable/capsuler_login_btn"
                android:text="Send"
                android:fontFamily="@font/century_gothic_bold"
                android:textAllCaps="false"
                android:textSize="60px"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/forgot_guideline_begin"
                app:layout_constraintEnd_toEndOf="@id/forgot_guideline_end"
                app:layout_constraintTop_toBottomOf="@+id/et_email_address"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
