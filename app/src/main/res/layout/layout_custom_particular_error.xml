<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:layout_width="@dimen/margin_50"
        android:src="@drawable/alert"
        android:id="@+id/iSuccess"
        android:layout_marginTop="@dimen/margin_20"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="@dimen/margin_50">
    </ImageView>

    <TextView
        android:layout_width="0dp"
        android:id="@+id/title"
        android:textAlignment="center"
        android:text="@string/error"
        android:layout_marginTop="@dimen/margin_10"
        android:textSize="@dimen/px50"
        android:fontFamily="@font/century_gothic_bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/iSuccess"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content">
    </TextView>

    <TextView
        android:layout_width="0dp"
        android:id="@+id/description"
        android:textAlignment="center"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:fontFamily="@font/century_gothic"
        android:textSize="@dimen/px45"
        android:text="@string/reset_password_mesage"
        android:layout_marginTop="@dimen/margin_10"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content">
    </TextView>


    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/bOkay"
        android:background="@drawable/bt_bg_dialog"
        android:paddingLeft="@dimen/margin_20"
        android:textColor="@android:color/black"
        android:textSize="@dimen/px50"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/margin_10"
        android:paddingBottom="@dimen/margin_10"
        android:fontFamily="@font/century_gothic_bold"
        android:paddingRight="@dimen/margin_20"
        app:layout_constraintTop_toBottomOf="@id/description"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_marginBottom="@dimen/margin_20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/okay"
        android:layout_height="wrap_content"
        />


</androidx.constraintlayout.widget.ConstraintLayout>