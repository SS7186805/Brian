<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto">


    <data>

        <variable
            name="viewModel"
            type="com.brian.viewModels.register.RegisterViewModel" />

        <variable
            name="clickHandler"
            type="com.brian.views.fragments.TrainingVideosFragment.ClickHandler" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:background="@color/blackTheme"
        android:layout_height="match_parent">



        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:id="@+id/startGuide"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05"
            android:layout_height="wrap_content"/>

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:id="@+id/endGuide"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95"
            android:layout_height="wrap_content"/>





        <include
            android:id="@+id/type1"
            layout="@layout/training_videos_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_30"
            app:layout_constraintEnd_toEndOf="@+id/endGuide"
            app:layout_constraintStart_toStartOf="@+id/startGuide"
            app:layout_constraintTop_toTopOf="parent" />


        <include
            android:id="@+id/type2"
            layout="@layout/training_videos_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_15"
            app:layout_constraintEnd_toEndOf="@+id/endGuide"
            app:layout_constraintStart_toStartOf="@+id/startGuide"
            app:layout_constraintTop_toBottomOf="@id/type1" />
        <include
            android:id="@+id/type3"
            layout="@layout/training_videos_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_15"
            app:layout_constraintEnd_toEndOf="@+id/endGuide"
            app:layout_constraintStart_toStartOf="@+id/startGuide"
            app:layout_constraintTop_toBottomOf="@id/type2" />
        <include
            android:id="@+id/type4"
            layout="@layout/training_videos_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_15"
            app:layout_constraintEnd_toEndOf="@+id/endGuide"
            app:layout_constraintStart_toStartOf="@+id/startGuide"
            app:layout_constraintTop_toBottomOf="@id/type3" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
